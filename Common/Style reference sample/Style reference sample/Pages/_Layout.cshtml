@using Microsoft.AspNetCore.Components.Web
@namespace Style_reference_sample.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Style_reference_sample.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <script src="https://cdn.syncfusion.com/blazor/20.2.48/syncfusion-blazor-pdfviewer.min.js" type="text/javascript"></script>
    <!--Either refer Style from CDN-->   
    <link href="https://cdn.syncfusion.com/blazor/20.2.48/styles/bootstrap5.css" rel="stylesheet"/>
     <!--Or refer Bootstrap 5 style from static web assets-->     
    @*<link href="_content/Syncfusion.Blazor.Themes/bootstrap5.css" rel="stylesheet" />*@ 
    <!--Or refer Fluent style from static web assets-->     
    @*<link href="_content/Syncfusion.Blazor.Themes/fluent.css" rel="stylesheet" />*@
    <!--Or refer High Contrast style from static web assets-->     
    @*<link href="_content/Syncfusion.Blazor.Themes/highcontrast.css" rel="stylesheet" />*@
    <!--Or refer Tailwind CSS style from static web assets-->     
    @*<link href="_content/Syncfusion.Blazor.Themes/tailwind.css" rel="stylesheet" />*@
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
